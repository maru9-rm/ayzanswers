.container
  %h1 LOG IN
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-section
      .text-start.mb-3.display-3
        = f.label :username
      %div
        = f.text_field :username, class: "form"
    .form-section
      .text-start.mb-3.display-3
        = f.label :password
      %div
        = f.password_field :password, autocomplete: "current-password", class: "form"
    - if devise_mapping.rememberable?
      .text-start
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in", class: 'btn btn-primary button-wide my-5'
  -#= render "devise/shared/links"
