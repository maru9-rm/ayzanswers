                    .checkbox-default.my-1
                        %label
                            = f.check_box :textbook_eq_any , {multiple: true} , 5, nil
                            = "新ﾜｰｸ"
                    .checkbox-default.my-1
                        %label
                            = f.check_box :textbook_eq_any , {multiple: true} , 8, nil
                            = "予習ｼﾘｰｽﾞ系"
                    .checkbox-default.my-1
                        %label
                            = f.check_box :textbook_eq_any , {multiple: true} , 6, nil
                            = "その他のﾃｷｽﾄ"
                    .checkbox-default.my-1
                        %label
                            = f.check_box :textbook_eq_any , {multiple: true} , 7, nil
                            = "プリント"
        .search-done-btn
            = f.submit "絞り込む", class: "btn btn-primary btn-lg"


