                    .checkbox-default.my-1
                        %label
                            = f.check_box :subject_eq_any , {multiple: true} , 8, nil
                            = "その他"
            .form-group.col-4
                %label.search-item.mt-4
                    %span テキスト
                .checkbox.text-left.ms-2
                    .checkbox-default.my-1
                        %label
                            = f.check_box :textbook_eq_any , {multiple: true} , 1, nil
                            = "実力錬成"
                    .checkbox-default.my-1
                        %label
                            = f.check_box :textbook_eq_any , {multiple: true} , 2, nil
                            = "Keyﾜｰｸ"
                    .checkbox-default.my-1
                        %label
                            = f.check_box :textbook_eq_any , {multiple: true} , 3, nil
                            = "必修ﾃｷｽﾄ"
                    .checkbox-default.my-1
                        %label
                            = f.check_box :textbook_eq_any , {multiple: true} , 4, nil
